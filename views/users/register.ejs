<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup to Scan and Go!</title>

    <!-- bootstrap and fontawesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">

    <!-- my styles -->
    <link rel="stylesheet" href="/styles/styles.css" />

  </head>

  <body>
    <!-- main section -->
    <section class="vh-75 container-grid">
      <main class="main container-grid">
        <aside class="sidebar">
          <form id="registerPageForm" action="https://192.168.1.64:2000/api/v1/users/register" method="POST"
            class="mb-md-5 mt-md-4 pb-5">
            <!-- <form action="https://chris-desktop:2000/api/v1/users/register" method="POST" class="mb-md-5 mt-md-4 pb-5"> -->
            <!-- <form action="https://localhost:2000/api/v1/users/register" method="POST" class="mb-md-5 mt-md-4 pb-5"> -->

            <h2 class="fw-bold mb-2 text-uppercase">Signup</h2>
            <p class="mb-5">Choose a username and password</p>

            <div class="form-outline form-white mb-4">
              <input type="email" id="email" name="email" placeholder="Email" class="form-control form-control-lg" />
              <label class="form-label" for="email"></label>
            </div>

            <div class="form-outline form-white mb-4">
              <input type="text" id="username" name="username" placeholder="Username"
                class="form-control form-control-lg" />
              <label class="form-label" for="username"></label>
            </div>

            <div class="form-outline form-white mb-4">
              <input type="password" id="password" name="password" placeholder="Password"
                class="form-control form-control-lg" />
              <label class="form-label" for="password"></label>
            </div>

            <div class="d-grid">
              <button id="signupButton" type="submit" class="btn btn-light btn-lg">Signup</button>
            </div>
          </form>
        </aside>
      </main>
    </section>

    <script src="/javascripts/general.js"></script>
  </body>

</html>